.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        = 'Memberï¼š' 
        - @group.group_users.each do |group_user|
          .member
            = group_user.user.name
    .main-header__right-box
      =link_to root_path, class: "btn" do
        = "Edit"

  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :body, class: 'new-message', placeholder: 'type a message' 
      .input__image-box
        = f.label :image, class: 'input__image-box__image' do
          = fa_icon "picture-o", class: "icon" 
          = f.file_field :image, class: 'image-file'
      = f.submit 'Send', class: 'submit-btn'
